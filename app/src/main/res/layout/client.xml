<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ImageView para la imagen pequeña -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/avatars" />

        <!-- TextView para el ID -->
        <TextView
            android:id="@+id/idView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:textSize="14sp"
            android:fontFamily="monospace"
            tools:text="ID: 12345" />

        <!-- TextView para el nombre -->
        <TextView
            android:id="@+id/nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idView"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="4dp"
            android:textColor="#E91414"
            android:textSize="18sp"
            android:fontFamily="monospace"
            tools:text="Este es un titulo" />

        <!-- TextView para el saldo -->
        <TextView
            android:id="@+id/saldoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameView"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="8dp"
            android:textColor="#4D86C1"
            android:fontFamily="monospace"
            android:text="Saldo" />

        <!-- TextView para la descripción -->
        <TextView
            android:id="@+id/descView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saldoView"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:fontFamily="monospace"
            tools:text="Esta es una descripción" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>

